<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txtNomeProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text="Yakissoba"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/txtDescProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textSize="12sp"
        android:text="Maccarrão com camarão, carne, frango, legumes e champignons." />

    <TextView
        android:id="@+id/txtValorProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtDescProduto"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text="R$ 43,20"
        android:textColor="@android:color/holo_green_light"/>

    <include
        layout="@layout/divisor"/>
</LinearLayout>